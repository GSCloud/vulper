PROJECT_NAME="Vulper - generated config"

# DOCKER: application
APP_NAME="{{ APP_NAME }}"
APP_IMAGE="{{ APP_IMAGE }}" # Apache + PHP docker image
APP_VOLUME="{{ APP_VOLUME }}" # path to www folder
APP_PORT={{ APP_PORT }} # exposed port

# DOCKER: database
DB_NAME="{{ DB_NAME }}"
DB_IMAGE="{{ DB_IMAGE }}" # database docker image
DB_VOLUME="{{ DB_VOLUME }}" # path to database folder
DB_PORT={{ DB_PORT }} # exposed port
DB_INTERNAL_PORT={{ DB_INTERNAL_PORT }}  # internal port

# DOCKER: administration
PMA_NAME="{{ PMA_NAME }}"
PMA_IMAGE="{{ PMA_IMAGE }}" # administration docker image
PMA_PORT={{ PMA_PORT }} # exposed port
PMA_DISABLE={{ PMA_DISABLE }} # 1 = disable PMA container

###############################################################################

# PHP extensions
CMD_EXTRAS1="{{ CMD_EXTRAS1 }}" # commands to execute before APT; both make install / make extensions
APT_EXTRAS="{{ APT_EXTRAS }}" # extra packages to install; only make extensions
CMD_EXTRAS2="{{ CMD_EXTRAS2 }}" # commands to execute after APT; only make extensions

# PHP settings
PHP_EXTENSIONS="{{ PHP_EXTENSIONS }}" # extensions to install via docker-php-ext-install
PHP_CHECK_EXTENSIONS="{{ PHP_CHECK_EXTENSIONS }}" # extensions to test for presence

# MySQL settings
MYSQL_DATABASE_NAME={{ MYSQL_DATABASE_NAME }} # MySQL database
MYSQL_ROOT_PASSWORD="{{ MYSQL_ROOT_PASSWORD }}" # MySQL database root password
MYSQL_USER={{ MYSQL_USER }} # MySQL user
MYSQL_PASSWORD="{{ MYSQL_PASSWORD }}" # MySQL user password
